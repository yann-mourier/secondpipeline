pipeline {
    agent {
        docker { image 'node:16.13.1-alpine' }
    }
    
    stages {
        stage('local node') {
          steps {
            sh 'node --version'
          }
        }
    
        stage('Test') {
          agent {
            docker { image 'maven:3.9.0-eclipse-temurin-11' }
          }
            steps {
                sh 'mvn --version'
        
            }
        }
    }
}