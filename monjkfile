pipeline {
    agent any

    stages {
      
      stage('local node') {
        agent {
            docker { image 'node:16.13.1-alpine' }
        }
        steps {
            sh 'node --version'
        }
      }
    
      stage('Test') {
          agent {
            docker { image 'maven:3.9.0-eclipse-temurin-11' }
          }
            steps {
                sh 'mvn --version'
        
            }
        }
    }
}